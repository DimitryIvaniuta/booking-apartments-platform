{
  "info": {
    "name": "BookingApartments",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login (admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "auth",
                "login"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@local.test\",\n  \"password\": \"AdminPassword123!\",\n  \"deviceId\": \"postman-admin\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('status 200', function () { pm.response.to.have.status(200); });",
                  "var json = pm.response.json();",
                  "pm.environment.set('accessToken', json.accessToken);",
                  "pm.environment.set('refreshToken', json.refreshToken);"
                ]
              }
            }
          ]
        },
        {
          "name": "Login (user1)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "auth",
                "login"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user1@local.test\",\n  \"password\": \"UserPassword123!\",\n  \"deviceId\": \"postman-user1\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('status 200', function () { pm.response.to.have.status(200); });",
                  "var json = pm.response.json();",
                  "pm.environment.set('accessToken', json.accessToken);",
                  "pm.environment.set('refreshToken', json.refreshToken);"
                ]
              }
            }
          ]
        },
        {
          "name": "Refresh",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/refresh",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "auth",
                "refresh"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('status 200', function () { pm.response.to.have.status(200); });",
                  "var json = pm.response.json();",
                  "pm.environment.set('accessToken', json.accessToken);",
                  "pm.environment.set('refreshToken', json.refreshToken);"
                ]
              }
            }
          ]
        },
        {
          "name": "Logout (revoke access token)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/logout",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "auth",
                "logout"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
            }
          }
        },
        {
          "name": "Logout all sessions",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/logout-all",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "auth",
                "logout-all"
              ]
            }
          }
        },
        {
          "name": "List sessions",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/sessions",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "auth",
                "sessions"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Create apartment",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/apartments",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "apartments"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Sea View Studio\",\n  \"city\": \"Gdansk\",\n  \"capacity\": 2\n}"
        }
      }
    },
    {
      "name": "Get apartment",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/apartments/{{apartmentId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "apartments",
            "{{apartmentId}}"
          ]
        }
      }
    },
    {
      "name": "Check availability",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/apartments/{{apartmentId}}/availability?from=2026-02-01&to=2026-02-05",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "apartments",
            "{{apartmentId}}",
            "availability"
          ],
          "query": [
            {
              "key": "from",
              "value": "2026-02-01"
            },
            {
              "key": "to",
              "value": "2026-02-05"
            }
          ]
        }
      }
    },
    {
      "name": "Availability search (city/capacity)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "X-Client-Id",
            "value": "demo-client"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/availability/search?city=Gdansk&capacity=2&from=2026-02-01&to=2026-02-05&page=0&size=20",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "availability",
            "search"
          ],
          "query": [
            {
              "key": "city",
              "value": "Gdansk"
            },
            {
              "key": "capacity",
              "value": "2"
            },
            {
              "key": "from",
              "value": "2026-02-01"
            },
            {
              "key": "to",
              "value": "2026-02-05"
            },
            {
              "key": "page",
              "value": "0"
            },
            {
              "key": "size",
              "value": "20"
            }
          ]
        }
      }
    },
    {
      "name": "Create booking hold (with idempotency)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Idempotency-Key",
            "value": "{{idempotencyKey}}"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/bookings/hold",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "bookings",
            "hold"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"apartmentId\": \"{{apartmentId}}\",\n  \"startDate\": \"2026-02-10\",\n  \"endDate\": \"2026-02-12\"\n}"
        }
      }
    },
    {
      "name": "Confirm booking",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/bookings/{{bookingId}}/confirm",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "bookings",
            "{{bookingId}}",
            "confirm"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"paymentRef\": \"pay-demo-123\"\n}"
        }
      }
    },
    {
      "name": "Cancel booking",
      "request": {
        "method": "POST",
        "url": {
          "raw": "{{baseUrl}}/api/bookings/{{bookingId}}/cancel",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "bookings",
            "{{bookingId}}",
            "cancel"
          ]
        },
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}",
            "type": "text"
          }
        ]
      }
    },
    {
      "name": "Get booking",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/bookings/{{bookingId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "bookings",
            "{{bookingId}}"
          ]
        },
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}",
            "type": "text"
          }
        ]
      }
    }
  ]
}